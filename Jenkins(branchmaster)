pipeline {
    agent any

        parameters {
        string defaultValue: 'main', name: 'branch', trim: true
        }

        environment {
        BRANCH_NAME = "${branch}"
        }


    stages {
            stage('STAGE1') {
                when {
                        branch 'main' 
                    }
                steps {
                    sh '''
                    echo "This is STAGE1 printing as it is running on master"
                    '''
                }
            }
            stage('STAGE2') {
                when {
                        branch 'branch1'
                    }
                steps {
                    sh '''
                    echo "This is STAGE2 printing as it is running the branch1"
                    '''
                }
            }
        }
    }
